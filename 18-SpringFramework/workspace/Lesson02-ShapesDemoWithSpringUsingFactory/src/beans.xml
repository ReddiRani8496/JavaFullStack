<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="rectangleBean" class="training.iqgateway.business.impl.Rectangle">

	<constructor-arg value="10" index="0"></constructor-arg>
	<constructor-arg value="20" index="1"></constructor-arg>
	
	
	<!--<property name="length" value="10"></property>
	<property name="width" value="20"></property> -->
</bean>

<bean id="circleBean" class="training.iqgateway.business.impl.Circle">
	<!-- <property name="radius" value="23"></property>  -->
	<constructor-arg value="23" index="0"></constructor-arg>
</bean>

<bean id="shapeMakerBean" class="training.iqgateway.factory.ShapeMaker" factory-method="randomShape">
	<constructor-arg value="100"></constructor-arg>
	
</bean>

</beans>
