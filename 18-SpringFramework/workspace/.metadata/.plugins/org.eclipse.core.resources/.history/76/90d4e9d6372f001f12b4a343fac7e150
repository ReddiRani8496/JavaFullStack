package training.iqgateway.entities;

import javax.persistence.*;
import java.util.Set;

@Entity
@Table(name = "ROLES")
public class RoleEO {

    @Id
    @Column(name = "ROLENAME")
    private String roleName;
    
    @Column(name = "ROLE_DESCRIPTION")
    private String roleDesc;
    
    // Bidirectional relationship with UsersEO
    @OneToMany(mappedBy = "roleName", cascade = CascadeType.ALL, orphanRemoval = true)
    private Set<UsersEO> users;

    // Default constructor
    public RoleEO() {}

    // Parameterized constructor
    public RoleEO(String roleName, String roleDesc) {
        this.roleName = roleName;
        this.roleDesc = roleDesc;
    }

    // Getter and setter methods
    public String getRoleName() {
        return roleName;
    }

    public void setRoleName(String roleName) {
        this.roleName = roleName;
    }

    public String getRoleDesc() {
        return roleDesc;
    }

    public void setRoleDesc(String roleDesc) {
        this.roleDesc = roleDesc;
    }

    public Set<UsersEO> getUsers() {
        return users;
    }

    public void setUsers(Set<UsersEO> users) {
        this.users = users;
    }

    @Override
    public String toString() {
        return "RoleEO [roleName=" + roleName + ", roleDesc=" + roleDesc + "]";
    }
}